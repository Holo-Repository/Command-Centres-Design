<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="WindowManager.UserControls.PanelFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowManager.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Frame Name="Frame1" Background="LightSteelBlue" 
                   CanDrag="True" AllowDrop="True" 
                   DragStarting="Frame1_DragStarting" DragOver="Frame1_DragOver" Drop="Frame1_Drop" DropCompleted="Frame1_DropCompleted">
        
        <RelativePanel>
            <CommandBar RelativePanel.AlignLeftWithPanel="True" Background="Transparent" IsOpen="False" DefaultLabelPosition="Right">
                <AppBarButton Icon="Add" Label="Add Window"/>
            </CommandBar>
        </RelativePanel>

    </Frame>
    
</UserControl>
