<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WindowManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowManager.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <StackPanel>

        <local:MenuBar x:ConnectionId='2' x:Name="MainMenuBar" HorizontalAlignment="Left"/>

        <Grid HorizontalAlignment="Left">

            <Grid.RowDefinitions >
                <RowDefinition Height="205"/>
                <RowDefinition Height="205"/>
                <RowDefinition Height="205"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="426"/>
                <ColumnDefinition Width="426"/>
                <ColumnDefinition Width="427"/>
            </Grid.ColumnDefinitions>

            <local:TvPanel x:ConnectionId='3' x:Name="TV_Panel" Grid.Row="1" Grid.Column="1"/>

            <!--Row 0-->
            <local:WebPanel x:ConnectionId='4' x:Name="Panel1" Grid.Row="0" 
                            Grid.ColumnSpan="2" Grid.RowSpan="2" 
                            Source="https://www.microsoft.com"/>
            <local:WebPanel x:ConnectionId='5' x:Name="Panel2" Grid.Row="0" Grid.Column="2"/>

            <!--Row 1-->
            <local:WebPanel x:ConnectionId='6' x:Name="Panel3" Grid.Row="1" Grid.Column="2"/>
            
            
            <!--Row 2-->
            <local:WebPanel x:ConnectionId='7' x:Name="Panel4" Grid.Row="2" Grid.Column="0"
                            Source="https://www.google.com"/>
            <local:WebPanel x:ConnectionId='8' x:Name="Panel5" Grid.Row="2" Grid.Column="1"/>
            <local:WebPanel x:ConnectionId='9' x:Name="Panel6" Grid.Row="2" Grid.Column="2"/>


        </Grid>
   

    </StackPanel>

</Window>

