                                   HorizontalAlignment="Left"
                                   Margin="0,10,0,0"/>

                    <Button x:ConnectionId='3' x:Name="PickAFileButton"
                                                          Margin="0,20,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <SymbolIcon Symbol="Download"/>
                            <TextBlock Text="Download File"/>
                        </StackPanel>

                    </Button>
                    <TextBlock x:ConnectionId='4' x:Name="PickAFileOutputTextBlock" TextWrapping="Wrap" Padding="20,5,0,0"/>

                </StackPanel>
            </StackPanel>

        </Grid>
