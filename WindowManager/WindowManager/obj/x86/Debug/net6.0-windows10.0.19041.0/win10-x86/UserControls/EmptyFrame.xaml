<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="WindowManager.UserControls.EmptyFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowManager.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--Add event handlers for DragOver="Frame_DragOver" Drop="Frame_Drop"-->
    
    <Frame x:ConnectionId='2' Name="Frame1" Background="LightSteelBlue" 
                   AllowDrop="True"
                   BorderBrush="Black" BorderThickness="0.5">

        <RelativePanel>
            <CommandBar RelativePanel.AlignLeftWithPanel="True" Background="Transparent" IsOpen="False" DefaultLabelPosition="Right">
                <AppBarButton Icon="Add" Label="Add Window"/>
            </CommandBar>
        </RelativePanel>

    </Frame>
</UserControl>

