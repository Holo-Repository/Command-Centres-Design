<?xml version="1.0" encoding="utf-8"?>
<UserControl x:ConnectionId='1'
    x:Class="WindowManager.UserControls.MenuBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowManager.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" Spacing="15">
        <MenuBar Height="40">
            <MenuBarItem Title="+ Add Web Panel" >

                <MenuFlyoutSubItem Text="Popular Websites">

                    <MenuFlyoutItem x:ConnectionId='9' Text="Bing"                             >
                        <MenuFlyoutItem.Icon>
                            <ImageIcon Source="/Assets/bing-logo.png"/>
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:ConnectionId='10' Text="Youtube"                             >
                        <MenuFlyoutItem.Icon>
                            <ImageIcon Source="/Assets/youtube_logo.png"/>
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:ConnectionId='11' Text="NHS England"                             >
                        <MenuFlyoutItem.Icon>
                            <ImageIcon Source="/Assets/nhs-logo.png"/>
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                </MenuFlyoutSubItem>
                <MenuFlyoutItem x:ConnectionId='8' Text="Add by URL"                               >
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="U"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

            </MenuBarItem>

            <MenuBarItem Title="+ Add Teams Panel">
                <MenuFlyoutItem x:ConnectionId='6' Text="Create A Meeting"                             >
                    <MenuFlyoutItem.Icon>
                        <ImageIcon Source="/Assets/microsoft-teams-logo.png"/>
                    </MenuFlyoutItem.Icon>
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Z"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem x:ConnectionId='7' Text="Join A Meeting"                             >
                    <MenuFlyoutItem.Icon>
                        <ImageIcon Source="/Assets/microsoft-teams-logo.png"/>
                    </MenuFlyoutItem.Icon>
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="X"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </MenuBarItem>

            <MenuBarItem Title="Change Teams URLs">
                <MenuFlyoutItem x:ConnectionId='4' Text="Create A Meeting URL"                            >
                    <MenuFlyoutItem.Icon>
                        <SymbolIcon Symbol="Setting"/>
                    </MenuFlyoutItem.Icon>
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Z"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem x:ConnectionId='5' Text="Join A Meeting URL"                            >
                    <MenuFlyoutItem.Icon>
                        <SymbolIcon Symbol="Setting"/>
                    </MenuFlyoutItem.Icon>
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="X"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </MenuBarItem>

        </MenuBar>

        <ToggleSwitch x:ConnectionId='2' OffContent="Borders Off" OnContent="Borders On" IsOn="True"
                                                    />

        <Border BorderThickness="1" BorderBrush="LightBlue" CornerRadius="5">
        <StackPanel Orientation="Horizontal" Spacing="5"
                    Background="LightGray"
                    CornerRadius="5"
                    Height="15">
            <TextBlock Text="Number of Windows: "
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"/>
            
                <TextBlock x:ConnectionId='3'                                   
                   x:Name="NumWindowsTextBlock"
                   VerticalAlignment="Center"
                           Margin="10"/>
            
        </StackPanel>
        </Border>

    </StackPanel>

</UserControl>

