<?xml version="1.0" encoding="utf-8"?>
<UserControl x:ConnectionId='1'
    x:Class="WindowManager.UserControls.WebPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowManager.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    x:Name="root"
    mc:Ignorable="d">

    <Frame x:ConnectionId='2' x:Name="Frame1" Background="LightSteelBlue" 
                   CanDrag="True" AllowDrop="True" 
                                                                                 
                                                                  
                                                                                      >

        <Grid HorizontalAlignment="Stretch" BorderBrush="Black" BorderThickness="0.5">

            <Grid.RowDefinitions >
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <RelativePanel Grid.Column="0" Grid.Row="0" Margin="0">
                <Button x:ConnectionId='4' x:Name="MoveCommandBar" RelativePanel.AlignLeftWithPanel="True" Background="Transparent"
                                    Visibility="Collapsed" BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7C2;"/>
                        <TextBlock Text="Move"/>
                    </StackPanel>
                </Button>

                <Button x:ConnectionId='5' x:Name="CloseCommandBar" RelativePanel.AlignRightWithPanel="True" Background="Transparent"
                                    Visibility="Collapsed" BorderBrush="Transparent"                            >
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8BB;"/>
                        <TextBlock Text="Close"/>
                    </StackPanel>
                </Button>

                <!--<CommandBar x:Name="CloseCommandBar" RelativePanel.AlignRightWithPanel="True" Background="Transparent" IsOpen="False" DefaultLabelPosition="Right"
                                    Visibility="Collapsed">
                    <AppBarButton Label="Close" Click="AppBarButton1_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8BB;"/>
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>-->
            </RelativePanel>

            <controls:WebView2 x:ConnectionId='3' x:Name="WebViewContent" Source="{Binding Source, ElementName=root}" 
                                       Grid.Column="0" Grid.Row="1"
                                       HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>

    </Frame>
    
</UserControl>

