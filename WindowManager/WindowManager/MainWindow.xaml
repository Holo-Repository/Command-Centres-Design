<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WindowManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowManager.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <StackPanel>

        <MenuBar HorizontalAlignment="Left">
            <MenuBarItem Title="File">
                <MenuFlyoutItem Text="New">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="N"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Open...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="O"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Save">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="S"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Exit">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="E"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </MenuBarItem>

            <MenuBarItem Title="Edit">
                <MenuFlyoutItem Text="Undo">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Z"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Cut">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="X"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Copy">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="C"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Paste">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="V"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </MenuBarItem>

            <MenuBarItem Title="Help">
                <MenuFlyoutItem Text="About">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="I"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </MenuBarItem>
        </MenuBar>

        
            <Grid HorizontalAlignment="Left">

            <Grid.RowDefinitions >
                <RowDefinition Height="205"/>
                <RowDefinition Height="205"/>
                <RowDefinition Height="205"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="426"/>
                <ColumnDefinition Width="426"/>
                <ColumnDefinition Width="427"/>
            </Grid.ColumnDefinitions>

            <Frame Name="Frame1"  Background="LightSteelBlue" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2" 
                   CanDrag="True" AllowDrop="True" 
                   DragStarting="Frame_DragStarting" DragOver="Frame_DragOver" Drop="Frame_Drop" DropCompleted="Frame_DropCompleted"
                   PointerEntered="Frame_PointerEntered" PointerExited="Frame_PointerExited">

                <local:WebViewGrid Source="http://localhost:3000/"/>
                
            </Frame>

            <Frame Name="Frame2" Background="Pink" Grid.Column="2" Grid.Row="0" 
                   CanDrag="True" AllowDrop="True" 
                   DragStarting="Frame_DragStarting" DragOver="Frame_DragOver" Drop="Frame_Drop" DropCompleted="Frame_DropCompleted">
                <RelativePanel>
                    <CommandBar RelativePanel.AlignLeftWithPanel="True" Background="Transparent" IsOpen="False" DefaultLabelPosition="Right" CanDrag="True">
                        <AppBarButton Icon="Add" Label="Add" CanDrag="True"/>
                    </CommandBar>

                    <CommandBar RelativePanel.AlignRightWithPanel="True" Background="Transparent" IsOpen="False" DefaultLabelPosition="Right">
                        <AppBarButton Icon="Share" Label="Share"/>
                    </CommandBar>
                </RelativePanel>
            </Frame>

            <Frame Name="Frame3" Background="LightYellow" Grid.Column="2" Grid.Row="1" 
                   CanDrag="True" AllowDrop="True" 
                   DragStarting="Frame_DragStarting" DragOver="Frame_DragOver" Drop="Frame_Drop" DropCompleted="Frame_DropCompleted"></Frame>
                
            <Frame Name="Frame5" Background="LightSeaGreen" Grid.Column="1" Grid.Row="2" 
                   CanDrag="True" AllowDrop="True" 
                   DragStarting="Frame_DragStarting" DragOver="Frame_DragOver" Drop="Frame_Drop" DropCompleted="Frame_DropCompleted"></Frame>

            <Frame Name="Frame6" Background="MediumPurple" Grid.Column="2" Grid.Row="2"
                   CanDrag="True" AllowDrop="True" 
                   DragStarting="Frame_DragStarting" DragOver="Frame_DragOver" Drop="Frame_Drop" DropCompleted="Frame_DropCompleted"></Frame>


            <Frame x:Name="Frame4" Background="CornflowerBlue" Grid.Column="0" Grid.Row="2" 
                   CanDrag="True" AllowDrop="True" 
                   DragStarting="Frame_DragStarting" DragOver="Frame_DragOver" Drop="Frame_Drop" DropCompleted="Frame_DropCompleted">
                
                <controls:WebView2 x:Name="MyWebViewGoogle" Margin="10" Source="https://www.google.com" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                   CanDrag="True" AllowDrop="True"/>
            </Frame>

            <Frame Name="Frame7" Background="MediumPurple" Grid.Column="2" Grid.Row="2"
                   CanDrag="True" AllowDrop="True" 
                   DragStarting="Frame_DragStarting" DragOver="Frame_DragOver" Drop="Frame_Drop" DropCompleted="Frame_DropCompleted"></Frame>

            <Frame Name="Frame8" Background="MediumPurple" Grid.Column="2" Grid.Row="2"
                   CanDrag="True" AllowDrop="True" 
                   DragStarting="Frame_DragStarting" DragOver="Frame_DragOver" Drop="Frame_Drop" DropCompleted="Frame_DropCompleted" ></Frame>
                
        </Grid>
   

    </StackPanel>

</Window>
